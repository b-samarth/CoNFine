<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DosAndDontsActivity">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/dos_viewpager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    app:cardCornerRadius="30dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="50dp"
                            android:text="@string/dos_1_head"
                            android:fontFamily="@font/roboto_bold"
                            android:textSize="18sp"
                            android:paddingLeft="8dp"
                            android:gravity="center_horizontal" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:textSize="15sp"
                            android:padding="10dp"
                            android:text="@string/dos_1_body"
                            android:fontFamily="@font/roboto" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="50dp"
                            android:text="@string/dos_1_head"
                            android:fontFamily="@font/roboto_bold"
                            android:textSize="18sp"
                            android:paddingLeft="8dp"
                            android:gravity="center_horizontal" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:textSize="15sp"
                            android:padding="10dp"
                            android:text="@string/dos_1_body"
                            android:fontFamily="@font/roboto" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="50dp"
                            android:text="@string/dos_1_head"
                            android:fontFamily="@font/roboto_bold"
                            android:textSize="18sp"
                            android:paddingLeft="8dp"
                            android:gravity="center_horizontal" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:textSize="15sp"
                            android:padding="10dp"
                            android:text="@string/dos_1_body"
                            android:fontFamily="@font/roboto" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="50dp"
                            android:text="@string/dos_1_head"
                            android:fontFamily="@font/roboto_bold"
                            android:textSize="18sp"
                            android:paddingLeft="8dp"
                            android:gravity="center_horizontal" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:textSize="15sp"
                            android:padding="10dp"
                            android:text="@string/dos_1_body"
                            android:fontFamily="@font/roboto" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="50dp"
                            android:text="@string/dos_1_head"
                            android:fontFamily="@font/roboto_bold"
                            android:textSize="18sp"
                            android:paddingLeft="8dp"
                            android:gravity="center_horizontal" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:textSize="15sp"
                            android:padding="10dp"
                            android:text="@string/dos_1_body"
                            android:fontFamily="@font/roboto" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="50dp"
                            android:text="@string/dos_1_head"
                            android:fontFamily="@font/roboto_bold"
                            android:textSize="18sp"
                            android:paddingLeft="8dp"
                            android:gravity="center_horizontal" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:textSize="15sp"
                            android:padding="10dp"
                            android:text="@string/dos_1_body"
                            android:fontFamily="@font/roboto" />

                    </LinearLayout>


                </androidx.cardview.widget.CardView>
            </ScrollView>


        </RelativeLayout>

            <TextView
                android:id="@+id/dos_and_donts_head"
                android:layout_width="324dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/round_blue_text"
                android:ems="10"
                android:fontFamily="@font/arbutus"
                android:gravity="center"
                android:maxLines="2"
                android:padding="10dp"
                android:text="Do's"
                android:textColor="#5142B2"
                android:textSize="20sp"/>

        </RelativeLayout>

</LinearLayout>